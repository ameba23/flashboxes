# Create persistent directories
mkdir -p /persistent/{reth,lighthouse,rbuilder}
chown -R rbuilder:rbuilder /persistent/rbuilder

# Create initial blocklist file if it doesn't exist
if [ ! -f /persistent/rbuilder/rbuilder.blocklist.json ]; then
    echo '{}' > /persistent/rbuilder/rbuilder.blocklist.json
    chmod 644 /persistent/rbuilder/rbuilder.blocklist.json
    chown rbuilder:rbuilder /persistent/rbuilder/rbuilder.blocklist.json
fi